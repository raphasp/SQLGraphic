<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<ImageView
        android:id="@+id/imgAddErrorTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/imgAddErrorTest"
        android:src="@drawable/ic_error" />

    <TextView
        android:id="@+id/textAddErrorTest"
        android:textSize="@dimen/iphost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgAddErrorTest"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imgAddErrorTest"
        android:gravity="center_vertical"
        android:text="@string/imgAddErrorTest"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>
